<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gridview1"
    android:layout_marginBottom="1dp"
    android:gravity="center"> <!-- Căn giữa toàn bộ nội dung -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"

        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="110dp"

            app:cardElevation="1dp"
            app:cardCornerRadius="8dp"
            android:layout_gravity="center"> <!-- Căn giữa CardView -->

            <ImageView
                android:id="@+id/imgsp"
                android:layout_width="160dp"
                android:layout_height="125dp"
                android:layout_gravity="center"

                android:src="@mipmap/ic_launcher" /> <!-- Thay your_image bằng ảnh của bạn -->

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="left"> <!-- Căn giữa LinearLayout -->

            <TextView
                android:id="@+id/tensp"
                android:text="Tên sp"
                android:textColor="#0C9713"
                android:textSize="13sp"

                android:textAllCaps="true"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">
                <TextView

                    android:text="Người đăng:"
                    android:textColor="#000000"
                    android:textSize="10sp"

                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                />
                <TextView
                    android:id="@+id/nguoidang"
                    android:text="Bắc"
                    android:textColor="#FF1616"
                    android:textSize="10sp"
                    android:layout_marginLeft="2dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/masp"
        android:textSize="1sp"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <TextView
        android:id="@+id/cachlam"
        android:textSize="1sp"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <TextView
        android:id="@+id/nguyenlieu"
        android:textSize="1sp"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <TextView
        android:id="@+id/ghichu"
        android:textSize="1sp"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <TextView
        android:id="@+id/tendn"
        android:textSize="1sp"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/manhomsanpham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="1sp" />
</RelativeLayout>